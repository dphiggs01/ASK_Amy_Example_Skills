{
  "Skill": {
    "version": "1.0",
    "className": "fact_skill.ObamaDialog",
    "loggingLevel": "debug"
  },
  "Session": {
    "persistence": false
  },
  "Dialog": {
    "requestControl": {
      "NewSession": "new_session_started",
      "LaunchRequest": "launch_request",
      "IntentRequest": "intent_request",
      "SessionEndedRequest": "session_ended_request"
    },
    "intentControl": {
      "GetNewFactIntent": "get_new_fact_intent",
      "AMAZON.HelpIntent": "handle_default_intent",
      "AMAZON.CancelIntent": "default_cancel_intent",
      "AMAZON.StopIntent": "default_stop_intent"
    },
    "get_new_fact_intent": {
      "card_title": "Obama Fact",
      "speech_out_text": "Did you know {obama_fact}",
      "should_end_session": true
    },

    "handle_default_intent": {
      "speech_out_text": [
        "You can say tell me an Obama fact or you can say exit. ",
        "What can I help you with?"
      ],
      "should_end_session": false
    }
  }
}


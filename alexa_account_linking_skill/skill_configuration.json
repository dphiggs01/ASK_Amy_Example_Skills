{
  "Skill": {
    "version": "1.0",
    "className": "account_link_skill.AccountLinkDialog",
    "loggingLevel": "debug"
  },
  "Session": {
    "persistence": false
  },
  "Dialog": {
    "requestControl": {
      "NewSession": "new_session_started",
      "LaunchRequest": "launch_request",
      "IntentRequest": "intent_request",
      "SessionEndedRequest": "session_ended_request"
    },
    "intentControl": {
      "HelloWorldIntent": "hello_world_intent",
      "AMAZON.HelpIntent": "handle_default_intent",
      "AMAZON.CancelIntent": "default_cancel_intent",
      "AMAZON.StopIntent": "default_stop_intent"
    },
    "account_link_intent": {
      "speech_out_text": "Please use the companion app to authenticate on Amazon to start using this skill",
      "should_end_session": true,
      "card":{
        "type": "LinkAccount"
      }
    },

    "hello_world_intent": {
      "speech_out_text": "Hello {user_name}",
      "should_end_session": true
    },

    "handle_default_intent": {
      "speech_out_text": "Test Link account with Amazon Login",
      "should_end_session": true
    }
  }
}

